# Application Configuration
APP_NAME="Private Search Engine"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=/absolute/path/to/database/database.sqlite

# Queue Configuration
QUEUE_CONNECTION=database
QUEUE_BATCH_MAX_JOBS=100

# Cache Configuration
CACHE_STORE=file

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Google Drive Configuration (Service Account)
# For local development, use mock mode. For production, provide service account JSON path.
GOOGLE_DRIVE_MOCK=true
GOOGLE_DRIVE_MOCK_PATH=storage/app/google_drive_mock
GOOGLE_DRIVE_SERVICE_ACCOUNT_JSON=storage/app/credentials/service-account.json
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Crawler Configuration
CRAWLER_MAX_CONCURRENT_JOBS=10
CRAWLER_REQUEST_TIMEOUT=10
CRAWLER_MAX_PAGE_SIZE=5242880
CRAWLER_RATE_LIMIT_PER_DOMAIN=1
CRAWLER_USER_AGENT="PrivateSearchBot/1.0 (Personal Use; +http://localhost:8000/bot)"
CRAWLER_RESPECT_ROBOTS_TXT=true
CRAWLER_DEFAULT_CRAWL_DELAY=1
CRAWLER_MAX_REDIRECTS=5
CRAWLER_RETRY_ATTEMPTS=3
CRAWLER_RETRY_DELAY=5
CRAWLER_BACKOFF_MULTIPLIER=2
# Crawler category limit: Maximum pages to crawl per category per refresh
CRAWLER_MAX_CRAWLS_PER_CATEGORY=10

# Indexer Configuration
# Minimum records required to successfully generate an index for a category
INDEXER_MIN_RECORDS_PER_CATEGORY=1000
# Maximum age of data to keep in the index (in days)
INDEXER_MAX_DATA_AGE_DAYS=5
# Output JSON formatting
INDEXER_JSON_PRETTY_PRINT=true
# Internal metadata settings
INDEXER_SCHEMA_VERSION=1.0
INDEXER_CHECKSUM_ALGORITHM=sha256
INDEXER_DETERMINISTIC_SORTING=true
INDEXER_INCLUDE_METADATA=true

# Search Configuration
# Search ranking and fuzziness
SEARCH_FUZZINESS_THRESHOLD=2
SEARCH_BM25_K1=1.2
SEARCH_BM25_B=0.75
# API and UI limits
SEARCH_DEFAULT_PER_PAGE=20
# Threshold in seconds before a search is logged as "slow"
SEARCH_SLOW_THRESHOLD_SECONDS=2.0
# Highlighting and confidence thresholds
SEARCH_MIN_HIGHLIGHT_TERM_LENGTH=2
SEARCH_MIN_CONFIDENCE_SCORE=0.2

# API Configuration
API_RATE_LIMIT_PER_MINUTE=60

# System Timeouts
# Timeout for the full master:refresh cycle (in seconds)
MASTER_REFRESH_TIMEOUT=3600

# ADMIN CREDENTIALS
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=example_password

# MASTER KEY
API_MASTER_KEY=your_master_key_here